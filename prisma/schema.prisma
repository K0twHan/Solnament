generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User Model
model User {
  id       Int      @id @default(autoincrement())
  coId     Int
  username String
  wallet   String @db.VarChar(42) @unique()
  poolId   Int
  Co       Company      @relation(fields: [coId], references: [id])
  Pool     Pool     @relation(fields: [poolId], references: [id])
}

// Co.model.prisma
model Company {
  id     Int    @id @default(autoincrement())
  name   String
  akey   String
  pool   Pool[]
  users  User[]
}

// Pool.model.prisma
model Pool {
  id     Int    @id @default(autoincrement())
  wallet   String[] @db.VarChar(42)
  coId   Int
  Co  Company @relation(fields: [coId],references: [id])

  users  User[]
}
